{
  "plugins": ["react"],
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "rules": {
    "quotes": [2, "single"],
    "semi": [2, "always"],
    "curly": [2, "all"],
    "no-unused-vars": "warn",
    "no-useless-escape": "warn",
    "react/jsx-uses-react": 2,
    "no-sparse-arrays": "off"
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "allowImportExportEverywhere": true,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "arguments": true
  }
}
